{
  "apiVersion": "v1",
  "kind": "ReplicationController",
  "metadata": {
    "name": "db-controller",
    "labels": {
      "name": "db"
    },
    "namespace": "default"
  },
  "spec": {
    "replicas": 1,
    "template": {
      "metadata": {
        "labels": {
          "name": "db"
        }
      },
      "spec": {
        "containers": [
          {
            "image": "mongo",
            "name": "db",
            "ports": [
              {
                "name": "db",
                "containerPort": 27017,
                "hostPort": 27017
              }
            ],
            "volumeMounts": [
              {
                "name": "db-data",
                "mountPath": "/data/db"
              }
            ],
            "command": ["mongod","--auth"]
          }
        ],
        "volumes": [
          {
            "name": "db-data",
            "persistentVolumeClaim": {
              "claimName": "db-data"
            }
          }
        ]
      }
    }
  }
}
