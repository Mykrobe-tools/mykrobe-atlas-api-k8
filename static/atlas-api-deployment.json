{
  "apiVersion": "apps/v1beta2",
  "kind": "Deployment",
  "metadata": {
    "labels": {
      "app": "atlas-api"
    },
    "name": "atlas-api-deployment"
  },
  "spec": {
    "selector": {
      "matchLabels": {
        "app": "atlas-api"
      }
    },
    "template": {
      "metadata": {
        "labels": {
          "app": "atlas-api"
        }
      },
      "spec": {
        "containers": [
          {
            "image": "mthomsit/atlas-api:33",
            "name": "atlas-api",
            "ports": [
              {
                "containerPort": 3000,
                "protocol": "TCP"
              }
            ],
            "volumeMounts": [
              {
                "mountPath": "/app/uploads",
                "name": "uploads-volume"
              },
              {
                "mountPath": "/app/demo",
                "name": "demo-volume"
              }
            ],
            "env": [
              {
                "name": "NODE_ENV",
                "value": "production"
              },
              {
                "name": "MONGO_USER",
                "value": "admin"
              },
              {
                "name": "MONGO_PASSWORD",
                "value": "5HKCO4SDkTfy"
              },
              {
                "name": "AWS_ACCESS_KEY",
                "value": "AKIAIXA6O4I5CNPLVEZQ"
              },
              {
                "name": "AWS_SECRET_KEY",
                "value": "Ch8GWtz5rJ4XOLNArg30thxfOX9oFqNyX3DS282V"
              },
              {
                "name": "AWS_REGION",
                "value": "eu-west-1"
              },
              {
                "name": "ATLAS_APP",
                "value": "https://dev-mykrobe-atlas.makeandship.com"
              },
              {
                "name": "ES_SCHEME",
                "value": "https"
              },
              {
                "name": "ES_HOST",
                "value": "es-dev.makeandship.com"
              },
              {
                "name": "ES_PORT",
                "value": "9200"
              },
              {
                "name": "ES_USERNAME",
                "value": "admin"
              },
              {
                "name": "ES_PASSWORD",
                "value": "Fc&S8QL<@j<&}3Bj"
              },
              {
                "name": "ES_INDEX_NAME",
                "value": "mykrobe-dev"
              },
              {
                "name": "KEYCLOAK_REDIRECT_URI",
                "value": "https://dev-mykrobe.makeandship.com/"
              },
              {
                "name": "API_HOST",
                "value": "api-dev-mykrobe-atlas.makeandship.com"
              },
              {
                "name": "DEBUG",
                "value": "1"
              },
              {
                "name": "ANALYSIS_API",
                "value": "https://analysis-api-dev-mykrobe-atlas.makeandship.com"
              },
              {
                "name": "BIGSI_API",
                "value": "https://dev-bigsi-mykrobe-atlas.makeandship.com"
              },
              {
                "name": "UPLOADS_LOCATION",
                "value": "/data"
              },
              {
                "name": "DEMO_DATA_ROOT_FOLDER",
                "value": "/app/demo"
              }
            ]
          }
        ],
        "volumes": [
          {
            "name": "uploads-volume",
            "hostPath": {
              "path": "/ssd0/atlas",
              "type": "Directory"
            }
          },
          {
            "name": "demo-volume",
            "hostPath": {
              "path": "/ssd0/atlas/demo",
              "type": "Directory"
            }
          }
        ],
        "imagePullSecrets": [{ "name": "dockerhub" }]
      }
    }
  }
}
