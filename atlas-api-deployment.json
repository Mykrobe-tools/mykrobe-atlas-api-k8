{
  "apiVersion": "apps/v1beta2",
  "kind": "Deployment",
  "metadata": {
    "labels": {
      "app": "atlas-api"
    },
    "name": "atlas-api-deployment"
  },
  "spec": {
    "selector": {
      "matchLabels": {
        "app": "atlas-api"
      }
    },
    "template": {
      "metadata": {
        "labels": {
          "app": "atlas-api"
        }
      },
      "spec": {
        "containers": [
          {
            "command": [
              "yarn",
              "start"
            ],
            "image": "#{image}",
            "name": "atlas-api",
            "ports": [
              {
                "containerPort": 3000,
                "protocol": "TCP"
              }
            ]
          }
        ]
      }
    }
  }
}