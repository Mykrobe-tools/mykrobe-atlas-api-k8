{
  "apiVersion": "v1",
  "kind": "Service",
  "metadata": {
    "name": "elasticsearch-discovery",
    "namespace": "default",
    "labels": {
      "component": "elasticsearch",
      "role": "master"
    }
  },
  "spec": {
    "type": "NodePort",
    "ports": [
      {
      "name": "transport",
      "protocol": "TCP",
      "port": 9300
      }
    ],
    "selector": {
      "component": "elasticsearch",
      "role": "master"
    }
  }
}

  