{
  "apiVersion": "v1",
  "kind": "Service",
  "metadata": {
    "name": "odfe-node1",
    "namespace": "default",
    "labels": {
      "component": "elasticsearch",
      "role": "master"
    }
  },
  "spec": {
    "type": "NodePort",
    "ports": [
      {
        "name": "http",
        "port": 9200,
        "targetPort": 9200,
        "protocol": "TCP"
      },
      {
        "name": "transport",
        "port": 9300,
        "targetPort": 9300,
        "protocol": "TCP"
      },
      {
        "name": "metrics",
        "port": 9600,
        "targetPort": 9600,
        "protocol": "TCP"
      }
    ],
    "selector": {
      "component": "elasticsearch",
      "role": "master"
    }
  }
}

  