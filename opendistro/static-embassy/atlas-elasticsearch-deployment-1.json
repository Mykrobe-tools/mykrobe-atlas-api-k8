{
  "apiVersion": "apps/v1beta2",
  "kind": "Deployment",
  "metadata": {
    "labels": {
      "app": "odfe-node1"
    },
    "name": "odfe-node1"
  },
  "spec": {
    "replicas": 1,
    "selector": {
      "matchLabels": {
        "app": "odfe-node1"
      }
    },
    "template": {
      "metadata": {
        "labels": {
          "app": "odfe-node1"
        }
      },
      "spec": {
        "containers": [
          {
            "image": "amazon/opendistro-for-elasticsearch:1.2.0",
            "name": "odfe-node1",
            "ports": [
              {
                "containerPort": 9200,
                "protocol": "TCP",
                "name": "http"
              },
              {
                "containerPort": 9300,
                "protocol": "TCP",
                "name": "transport"
              },
              {
                "containerPort": 9600,
                "protocol": "TCP",
                "name": "metrics"
              }
            ],
            "volumeMounts": [
              {
                "name": "elasticsearch-data",
                "mountPath": "/usr/share/elasticsearch/data",
                "subPath": "data1"
              },
              {
                "name": "elasticsearch-config",
                "mountPath": "/usr/share/elasticsearch/plugins/opendistro_security/securityconfig/config.yml",
                "subPath": "simple-config.yml"
              },
              {
                "name": "elasticsearch-config",
                "mountPath": "/usr/share/elasticsearch/config/elasticsearch.yml",
                "subPath": "simple-custom-elasticsearch.yml"
              },
              {
                "name": "elasticsearch-config",
                "mountPath": "/usr/share/elasticsearch/config/fullchain.pem",
                "subPath": "odfe-tmp-chain.pem"
              },
              {
                "name": "elasticsearch-config",
                "mountPath": "/usr/share/elasticsearch/config/chain.pem",
                "subPath": "odfe-tmp-cert.pem"
              },
              {
                "name": "elasticsearch-config",
                "mountPath": "/usr/share/elasticsearch/config/cert.pem",
                "subPath": "odfe-tmp-cert.pem"
              },
              {
                "name": "elasticsearch-config",
                "mountPath": "/usr/share/elasticsearch/config/privkey.pem",
                "subPath": "odfe-tmp-privkey.pem"
              }
            ],
            "env": [
              {
                "name": "cluster.name",
                "value": "odfe-cluster"
              },
              {
                "name": "node.name",
                "value": "odfe-node1"
              },
              {
                "name": "discovery.seed_hosts",
                "value": "odfe-cluster"
              },
              {
                "name": "cluster.initial_master_nodes",
                "value": "odfe-node1,odfe-node2"
              },
              {
                "name": "cluster.name",
                "value": "odfe-cluster"
              },
              {
                "name": "bootstrap.memory_lock",
                "value": "true"
              },
              {
                "name": "ES_JAVA_OPTS",
                "value": "-Xms512m -Xmx512m"
              }
            ]
          }
        ],
        "initContainers": [
          {
            "name": "init-odfe",
            "image": "busybox:1.28",
            "command": ["sysctl", "-w", "vm.max_map_count=262144"],
            "securityContext": {
              "runAsUser": 0,
              "privileged": true
            }
          },
          {
            "name": "init-odfe",
            "image": "busybox:1.28",
            "command": ["sh", "-c", "ulimit -l unlimited"],
            "securityContext": {
              "capabilities": {
                "add": ["IPC_LOCK", "SYS_RESOURCE"]
              }  
            }
          },
          {
            "name": "init-odfe",
            "image": "busybox:1.28",
            "command": ["sh", "-c", "ulimit memlock=-1"],
            "securityContext": {
              "capabilities": {
                "add": ["IPC_LOCK", "SYS_RESOURCE"]
              }  
            }
          }
        ],
        "volumes": [
          {
            "name": "elasticsearch-data",
            "persistentVolumeClaim": {
              "claimName": "elasticsearch-data"
            }
          },
          {
            "name": "elasticsearch-config",
            "secret": {
              "secretName": "es-simple-dev-config"
            }
          },
          {
            "name": "es-admin-dev-mykro-be",
            "secret": {
              "secretName": "es-admin-dev-mykro-be"
            }
          }
        ],
        "imagePullSecrets": [{ "name": "dockerhub" }]
      }
    }
  }
}