{
  "apiVersion": "apps/v1beta1",
  "kind": "Deployment",
  "metadata": {
    "labels": {
      "app": "postgres"
    },
    "name": "postgres"
  },
  "spec": {
    "replicas": "1",
    "template": {
      "metadata": {
        "labels": {
          "app": "postgres"
        }
      },
      "spec": {
        "containers": [
          {
            "image": "postgres:10",
            "name": "postgres",
            "imagePullPolicy": "IfNotPresent",
            "ports": [
              {
                "containerPort": 5432,
                "protocol": "TCP"
              }
            ],
            "volumeMounts": [
              {
                "mountPath": "/var/lib/postgresql/data",
                "name": "postgresdb"
              }
            ],
            "env": [
              {
                "name": "POSTGRES_DB",
                "value": "keycloak"
              },
              {
                "name": "POSTGRES_USER",
                "value": "keycloak"
              },
              {
                "name": "POSTGRES_PASSWORD",
                "value": "GpwL9EHF7VmHZFYWaAf9GYHp"
              }
            ]
          }
        ],
        "volumes": [
          {
            "name": "postgresdb",
            "persistentVolumeClaim": {
              "claimName": "postgres-pvc"
            }
          }
        ]
      }
    }
  }
}
