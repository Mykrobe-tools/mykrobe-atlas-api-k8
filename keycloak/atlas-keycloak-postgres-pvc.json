{
  "apiVersion": "v1",
  "kind": "PersistentVolumeClaim",
  "metadata": {
    "name": "postgres-pvc",
    "namespace": "default",
    "labels": {
      "app": "postgres"
    }
  },
  "spec": {
    "accessModes": ["ReadWriteMany"],
    "resources": {
      "requests": {
        "storage": "10Gi"
      }
    }
  }
}
